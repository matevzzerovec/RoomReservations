@model RoomReservationsVM.ViewModels.Booking.BookingVm

<div id="divRoomBooking" class="row justify-content-center">

    <div class="col-md-8">

        <div class="form-group row">
            <!-- Arrival Date -->
            <div class="col-md-6 d-flex align-items-center">
                <label class="mr-2 mb-0" style="width: 80px">Datum od:</label>
                <input asp-for="ArrivalDate" asp-format="{0:dd.MM.yyyy}" class="form-control" style="width: 160px; margin-left: 1rem;" type="text" />
                <span asp-validation-for="ArrivalDate" class="text-danger ml-2"></span>
            </div>

            <!-- Departure Date -->
            <div class="col-md-6 d-flex align-items-center">
                <label class="mr-2 mb-0" style="width: 80px">Datum do:</label>
                <input asp-for="DepartureDate" asp-format="{0:dd.MM.yyyy}" class="form-control" style="width: 160px; margin-left: 1rem;" type="text" />
                <span asp-validation-for="DepartureDate" class="text-danger ml-2"></span>
            </div>
        </div>

        <div class="form-group mt-2">
            <select asp-for="SelectedRoomId" class="form-control" asp-items="Model.RoomSelectList"></select>
            <span asp-validation-for="SelectedRoomId" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <input asp-for="Email" class="form-control" type="email" placeholder="E-mail" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <input asp-for="PhoneNumber" class="form-control" type="tel" placeholder="Telefon" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <textarea asp-for="CustomerNote" class="form-control" placeholder="Pusti sporočilo:"></textarea>
            <span asp-validation-for="CustomerNote" class="text-danger"></span>
        </div>

    </div>

</div>
