@model RoomReservationsVM.ViewModels.Account.InputModel

<h4>Prijava</h4>

<div class="row">
    <div class="col-md-4">

        <form asp-action="Login" asp-controller="Account" method="post">

            <div class="form-group mt-2">
                <input asp-for="Email" class="form-control" placeholder="E-mail" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <input asp-for="Password" class="form-control" placeholder="Geslo" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <button type="submit" class="btn btn-dark">Prijava</button>
            </div>

        </form>

    </div>
</div>